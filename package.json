{
  "name": "chrome-extension-template",
  "version": "1.0.0",
  "description": "A comprehensive template for Chrome browser extensions with modern development tools and best practices",
  "main": "src/background/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,html,css}\"",
    "clean": "rimraf dist",
    "zip": "npm run build && node scripts/zip.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "chrome-extension",
    "browser-extension",
    "template",
    "webpack",
    "typescript",
    "manifest-v3"
  ],
  "author": "Jin-Ho Lee",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "archiver": "^6.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "dependencies": {
    "chrome-types": "^0.1.382"
  }
}
